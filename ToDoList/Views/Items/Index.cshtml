@using ToDoList.Models;

<h1>To Do List</h1>
<hr />
<h2>Items</h2>

@if (Model.Count!=0)
{
    <ul>
        @foreach (Item item in Model)
        {
            <li><a href="/items/@item.GetId()">@item.GetDescription()</a></li>
        }
    </ul>
}
<h4><a href="/items/new">Add Item</a></h4>
<h4><a href="/">Return Home</a></h4>